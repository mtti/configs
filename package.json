{
  "name": "@mtti/configs",
  "version": "0.1.1",
  "description": "NodeJS application configuration manager",
  "repository": "github:mtti/configs",
  "author": "Matti Hiltunen",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10.15.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "jest": "jest --config ./jest.config.json",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "prepare": "npm run clean && npm run build",
    "prepublishOnly": "npm run test",
    "setup": "npm install",
    "test": "npm run lint && npm run jest",
    "test:docker": "docker build -f ./Dockerfile-test -t ts-test . && docker run --rm -it ts-test",
    "tsc": "tsc",
    "clean": "rm -rf ./dist"
  },
  "files": [
    "dist",
    "!dist/*.spec.js",
    "!dist/*.spec.d.ts"
  ],
  "devDependencies": {
    "@mtti/eslint-config-typescript": "1.0.0",
    "@types/fs-extra": "8.0.0",
    "@types/jest": "24.0.18",
    "@types/js-yaml": "3.12.1",
    "@types/minimist": "1.2.0",
    "@types/node": "12.7.5",
    "@types/node-vault": "^0.9.0",
    "@typescript-eslint/eslint-plugin": "2.2.0",
    "@typescript-eslint/parser": "2.2.0",
    "eslint": "6.4.0",
    "eslint-plugin-import": "2.18.2",
    "jest": "24.9.0",
    "ts-jest": "24.1.0",
    "typescript": "3.6.3"
  },
  "dependencies": {
    "@mtti/funcs": "^1.0.0",
    "fs-extra": "^8.1.0",
    "js-yaml": "^3.13.1",
    "minimist": "^1.2.0"
  },
  "peerDependencies": {
    "node-vault": "^0.9.11"
  }
}
